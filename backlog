.value(f) = .on('value', f)
.error(f) = .on('error', f)
.both(f) = .on('both', f)
.end(f) = .on('both', f)

.watchValue(f) = .wathc('value', f)
.watchError(f) = .wathc('error', f)
.watchBoth(f) = .wathc('both', f)





